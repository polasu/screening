
@model UserQuestionAnswers
@{
    ViewData["Title"] = "Screening Questions";
}
<h1>User Screening Questions</h1>
<hr />

<div class="row">
    <div class="col-md-9">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var item in Model.QuestionsList)
            {
                <div class="form-group">
                    <label asp-for="@item.Question" class="control-label">@item.Question</label>

                    <input type="radio" name="@item.Id" value="1" />Yes
                    <input type="radio" name="@item.Id" value="0" />No

                    <span asp-validation-for="@item.Question" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save User Answers" class="btn btn-primary" />
            </div>
            <span class="alert-danger">
                @Html.Raw(TempData["Message"])
            </span>
            <span class="alert-success">
                <b>@ViewBag.message</b>
            </span>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}  