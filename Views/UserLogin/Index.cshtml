@model LoginView
@{
    ViewBag.Title = "Login";

}

<h2>Login To Staff Screening App</h2>


<div>
    @using (Html.BeginForm("Login", "UserLogin"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
            <span class="alert-danger">
                @Html.Raw(TempData["Message"])
            </span>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.UserName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.UserName, new { @class = "form-control", style = "width:350px" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password", style = "width:350px" })</div>
        </div><br />
              <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-10"><input type="submit" value="Login" class="btn btn-primary" /><br /><br />@Html.ActionLink("Click here to register", "Index", "Registration")</div>
              </div>
                  

                  @*<a href='@Url.Action("Index", "Registration")' class="btn btn-primary">Register</a>*@
     }

</div>